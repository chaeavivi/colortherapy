<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>채아힐링센터</title>
    <script>
        // 2025년 11월 15일 00:00:00 (한국시간)
        const switchDate = new Date('2025-11-15T00:00:00+09:00');
        const currentDate = new Date();
        
        let targetUrl;
        
        if (currentDate >= switchDate) {
            // 11월 15일 이후 - 공지사항 페이지
            targetUrl = "https://chaeavivi.github.io/colortherapy/notice.html";
        } else {
            // 11월 15일 이전 - 메인 페이지 (healing.html)
            targetUrl = "https://chaeavivi.github.io/colortherapy/healing.html";
        }
        
        // 즉시 리다이렉션
        window.location.href = targetUrl;
    </script>
    <meta http-equiv="refresh" content="0;url=https://chaeavivi.github.io/colortherapy/healing.html">
</head>
